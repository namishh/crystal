@import "colors.rasi"
* {
    background-color:       @background;
    text-color:             @foreground;
}

window {
    width:      			250px;
    padding:    			20px;
    border:					1px;
    border-radius:          0px;
    border-color:           @selected;
    location:               center;
    x-offset:               0;
    y-offset:               -4%;
}

entry {
    expand: 				true;
    width: 					150px;
    text-color:				@selected;
}
